{
  "name": "@cef-ebsi/wallet-lib",
  "version": "5.0.0-alpha.3",
  "type": "module",
  "description": "EBSI Wallet Library",
  "license": "EUPL-1.2",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "bitbucket",
    "url": "https://ec.europa.eu/digital-building-blocks/code/scm/ebsi/core-libs.git",
    "directory": "packages/wallet"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/cjs/EbsiWallet.js",
  "types": "./dist/cjs/EbsiWallet.d.ts",
  "module": "./dist/esm/EbsiWallet.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/EbsiWallet.d.ts",
        "default": "./dist/esm/EbsiWallet.js"
      },
      "require": {
        "types": "./dist/cjs/EbsiWallet.d.ts",
        "default": "./dist/cjs/EbsiWallet.js"
      }
    }
  },
  "scripts": {
    "build": "run-s clean build:*",
    "build:cjs": "tsc -p tsconfig/tsconfig.build.cjs.json && echo '{\"type\": \"commonjs\"}'> dist/cjs/package.json",
    "build:esm": "tsc -p tsconfig/tsconfig.build.esm.json",
    "clean": "rimraf dist coverage",
    "lint": "yarn lint:prettier && yarn lint:tsc",
    "lint:prettier": "prettier . --check",
    "lint:tsc": "tsc --noEmit --incremental false",
    "prepare": "yarn build",
    "test": "vitest --run",
    "test:unit": "yarn test unit",
    "test:e2e": "yarn test:e2e:browser && yarn test:e2e:node",
    "test:e2e:browser": "yarn test -c vitest.e2e-browser.config.ts",
    "test:e2e:node": "yarn test e2e/node",
    "test:ci": "yarn test:unit --coverage --reporter=default --reporter=vitest-sonar-reporter"
  },
  "dependencies": {
    "@cef-ebsi/ebsi-did-resolver": "^4.0.0-alpha.2",
    "@cef-ebsi/key-did-resolver": "^2.0.0-alpha.2",
    "@cef-ebsi/key-encoder": "^1.0.0-alpha.2",
    "@ethersproject/providers": "^5.7.2",
    "@noble/hashes": "^1.3.2",
    "bn.js": "^5.2.1",
    "did-jwt": "^7.3.0",
    "elliptic": "^6.5.4",
    "jose": "^4.14.6",
    "multiformats": "^12.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@cef-ebsi/oauth2-auth": "^3.0.0-alpha.3",
    "@ethersproject/bignumber": "^5.7.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@types/elliptic": "^6.4.15",
    "@types/serve-handler": "^6.1.2",
    "axios": "^1.5.1",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.4",
    "puppeteer": "^21.3.5",
    "secp256k1": "^5.0.0",
    "serve-handler": "^6.1.5",
    "typescript": "~5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.1"
  },
  "gitHead": "a5798f045f97b434a16011edb8d2f9950906955f"
}
