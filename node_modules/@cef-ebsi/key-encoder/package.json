{
  "name": "@cef-ebsi/key-encoder",
  "version": "1.0.0-alpha.2",
  "type": "module",
  "description": "Library for encoding ECDSA private keys to PEM, DER and raw hex formats",
  "license": "(EUPL-1.2 OR Apache-2.0)",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "bitbucket",
    "url": "https://ec.europa.eu/digital-building-blocks/code/scm/ebsi/core-libs.git",
    "directory": "packages/key-encoder"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "prepare": "yarn build",
    "build": "run-s clean build:*",
    "build:cjs": "tsc -p tsconfig/tsconfig.build.cjs.json && echo '{\"type\": \"commonjs\"}'> dist/cjs/package.json",
    "build:esm": "tsc -p tsconfig/tsconfig.build.esm.json",
    "clean": "rimraf dist coverage",
    "lint": "yarn lint:tsc",
    "lint:tsc": "tsc --noEmit --incremental false",
    "test": "vitest --run",
    "test:unit": "yarn test",
    "test:e2e": "echo \"Info: there's no e2e tests for @cef-ebsi/key-encoder\" && exit 0",
    "test:ci": "yarn test:unit --coverage --reporter=default --reporter=vitest-sonar-reporter"
  },
  "dependencies": {
    "asn1.js": "^5.4.1",
    "elliptic": "^6.5.4"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.15"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "gitHead": "9bc670751935902152ce0e533ffb784c2d1f5521"
}
