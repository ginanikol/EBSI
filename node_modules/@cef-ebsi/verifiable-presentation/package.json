{
  "name": "@cef-ebsi/verifiable-presentation",
  "version": "5.4.2",
  "description": "EBSI Verifiable Presentation library",
  "author": "",
  "license": "EUPL-1.2",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "bitbucket",
    "url": "https://ec.europa.eu/digital-building-blocks/code/scm/ebsi/core-libs.git",
    "directory": "packages/verifiable-presentation"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "yarn copy:schemas && yarn build",
    "build": "yarn clean && yarn build:json-schemas-to-types && tsc -p tsconfig.build.json",
    "build:json-schemas-to-types": "json2ts --input src/schemas/ebsi-presentation/2022-11/schema.json --output src/types/EBSIVerifiablePresentation.ts",
    "clean": "rimraf dist coverage src/types/EBSIVerifiablePresentation.ts",
    "copy:schemas": "rimraf src/schemas && cpy ../../submodules/json-schema/schemas src",
    "lint": "yarn lint:prettier && yarn lint:tsc",
    "lint:prettier": "prettier . --check",
    "lint:tsc": "tsc --noEmit --incremental false",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:ci": "yarn test:unit --coverage --reporters=default --reporters=jest-sonar"
  },
  "dependencies": {
    "@cef-ebsi/ebsi-did-resolver": "^3.2.0",
    "@cef-ebsi/key-did-resolver": "^1.1.0",
    "@cef-ebsi/verifiable-credential": "^4.5.2",
    "@transmute/json-web-signature": "^0.7.0-unstable.80",
    "@transmute/vc.js": "^0.7.0-unstable.80",
    "ajv": "^8.12.0",
    "did-resolver": "^4.1.0",
    "jose": "^4.14.4",
    "mem": "^8.1.1",
    "multiformats": "^9.9.0"
  },
  "devDependencies": {
    "@cef-ebsi/wallet-lib": "^4.2.0",
    "@jest/globals": "^29.5.0",
    "@types/lodash.clonedeep": "^4.5.7",
    "dotenv": "^16.0.3",
    "elliptic": "^6.5.4",
    "json-schema-to-typescript": "^13.0.1",
    "lodash.clonedeep": "^4.5.0",
    "nock": "^13.3.1"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "engines": {
    "node": ">=16.10.0"
  },
  "gitHead": "fe4da593f11c9c279cbcca6ec8a51a65051b11b9"
}
